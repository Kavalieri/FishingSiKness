{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Godot: Ejecutar juego",
            "type": "shell",
            "command": "godot",
            "args": [
                "--path",
                "project/",
                "--verbose"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true,
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Godot: Debug con salida completa",
            "type": "shell",
            "command": "godot",
            "args": [
                "--path",
                "project/",
                "--verbose",
                "--debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true,
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Godot: Ejecutar tests unitarios",
            "type": "shell",
            "command": "godot",
            "args": [
                "--headless",
                "--test",
                "project/tests/unit/"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Godot: Ejecutar tests de integraci√≥n",
            "type": "shell",
            "command": "godot",
            "args": [
                "--headless",
                "--test",
                "project/tests/integration/"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build: Todas las plataformas",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\build-all.ps1",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build: Todas las plataformas + Deploy Web",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\build-all.ps1",
            "args": [
                "-Deploy"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build: Windows",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\build-windows.ps1",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build: Android",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\build-android.ps1",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build: Web",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\build-web.ps1",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Build: Web + Deploy",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\build-web.ps1",
            "args": [
                "-Deploy"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Release: Upload Builds to Latest",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\upload-builds.ps1",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Release: Upload Builds (Dry Run)",
            "type": "shell",
            "command": ".\\build\\release-system\\scripts\\upload-builds.ps1",
            "args": [
                "-DryRun"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
